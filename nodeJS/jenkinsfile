pipeline {
    agent {
        docker {
            image 'node:18'        // Use Node Docker image
            args '-u root:root'    // Optional: allow writing to workspace
        }
    }

    environment {
        SONARQUBE_SERVER = 'SonarQubeLocal' // Name of SonarQube server in Jenkins
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install dependencies') {
            steps {
                sh 'cd nodeJS && npm install'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv(SONARQUBE_SERVER) {
                    sh 'cd nodeJS && sonar-scanner'
                }
            }
        }
    }

    post {
        success {
            echo 'SonarQube analysis completed successfully!'
        }
        failure {
            echo 'Pipeline failed. Check console output.'
        }
    }
}
