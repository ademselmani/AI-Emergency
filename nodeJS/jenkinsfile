pipeline {
    agent any
    environment {
        SONARQUBE_SERVER = 'SonarQubeLocal' // The name you set in Jenkins SonarQube configuration
    }
    stages {
        stage('Checkout') {
            steps {
                // Pull the code from your repository
                checkout scm
            }
        }

        stage('SonarQube Analysis') {
            steps {
                // Run SonarQube scanner
                withSonarQubeEnv(SONARQUBE_SERVER) {
                    bat 'sonar-scanner -Dsonar.projectKey=AI-Emergency -Dsonar.sources=.'
                    
                }
            }
        }
    }

    post {
        success {
            echo 'SonarQube analysis completed successfully!'
        }
        failure {
            echo 'SonarQube analysis failed. Check the logs.'
        }
    }
}
